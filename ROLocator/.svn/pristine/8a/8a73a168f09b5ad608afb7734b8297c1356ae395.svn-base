body, html{

    width: 100%;
    font-family:"Lucida Grande","Lucida Sans Unicode","Lucida Sans",Verdana,Tahoma,sans-serif;
    padding : 0;
    margin : 0;
    background-color : #DCDCDC ;
    background-position: center center;
    background-repeat: no-repeat;
    background: -webkit-gradient(radial, center center, 0, center center, 360, from(#fff), to(#DCDCDC));
    background: -webkit-radial-gradient(circle, #fff, #DCDCDC);
    background: -moz-radial-gradient(circle, #fff, #DCDCDC);
    background: -ms-radial-gradient(circle, #fff, #DCDCDC);
}

#login {
	position: absolute;
	left : 50px;
	top : 120px;
}

#login label {
	padding-left: 20px;
	height: 30px;
}

#logo {
	width : 300px;
	border-bottom-color: -ms-radial-gradient(circle, #fff, #DCDCDC);
	border-bottom-width: 2px;
	height: 50px;
}

#logo h1 {
	color: #DC143C;
	text-shadow : 0.2em 0.2em 0.08em #fff;
	height: 0.8em;
	font: 'lucida sans', 'trebuchet MS', 'Tahoma';
}

#userCreds input[type=text], #userCreds input[type=password] {
	background: #eee url(../img/key.png) left no-repeat;
	width: 180px;
	height: 30px;
	padding-left: 30px;
	border: 0;
	border-radius: 5px 5px 5px 5px;
	box-shadow: 0 1px 1px rgba(0,0,0,.4) inset, 0 1px 0 rgba(255,255,255,.2);
	margin-left: 20px;
}

#userCreds input[type=text] {
	background: #eee url(../img/user.png) left no-repeat;
}

#userCreds input[type=text]:focus, #userCreds input[type=password]:focus {
 outline: 0;
 background: #fff;
 box-shadow: 0 0 2px rgba(0,0,0,.8) inset;
}

 #userCreds input[type=submit] {
	overflow: visible;
	position: relative;
	float: right;
	border: 0;
	margin:0;
	cursor: pointer;
	height: 32px;
	width: 100px;
	font: bold 12px/20px 'lucida sans', 'trebuchet MS', 'Tahoma';
	color: #fff;
	text-transform: uppercase;
	text-align:center;
	background: #d83c3c url(../img/lock.png) left no-repeat;
	border-radius: 5px 5px 5px 5px;
	box-shadow: 0 1px 1px rgba(0,0,0,.4) inset, 0 1px 0 rgba(255,255,255,.2);
	text-shadow: 0 -1px 0 rgba(0, 0 ,0, .3);
	padding-left: 15px;
 }

 #userCreds input[type=submit]:hover {
	 background: #e54040 url(../img/lock.png) left no-repeat;
	border-color: #7cbfff;
 }

 #userCreds input[type=submit]:active,
 #userCreds input[type=submit]:focus{
	 background: #c42f2f url(../img/lock.png) left no-repeat;
	outline: 0;
 }

 #error {
     color : red;
     font-weight: bold;
     font-size: 1em;
     text-align: center;
     float: left;
     margin-left: 50px;
     vertical-align: middle;
     display: none;
 }
 
 