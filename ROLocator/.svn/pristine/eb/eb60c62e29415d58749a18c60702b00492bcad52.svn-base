.transactions-table thead {  
    border-bottom: 1px solid #BBB;
    height: 38px;
    /*width: 1000px;*/
}
.transactions-table{
    width: 100%;
}

.transactions-table thead th {  
    font: bold;
    background-color: #BBB;
    width: 1000%;
} 
.transactions-table th, 
.transactions-table thead {
    text-align: center;
    background-color: transparent;
} 
.transactions-table tbody {
    padding-top: 8px;
} 
.transactions-table tbody .innertable {
    width:100%;
    height: 500px;
    overflow-x: hidden;
    overflow-y: auto;
    border: 1px solid #aaa;
    -o-box-shadow: 1px 1px 6px #ccc;
    -moz-box-shadow: 1px 1px 6px #ccc;
    -webkit-box-shadow: 1px 1px 6px #ccc;
    box-shadow: 1px 1px 6px #ccc;
} 
.innertable table {
    width: 100%;
} 
.innertable table tr {
    height:38px;

} 
.innertable table td {
    /*width: 100%;*/
    border-right: 1px solid rgba(0,0,0,0.05);
    border-bottom: 1px solid rgba(0,0,0,0.05);
    text-align: center;
} 
.innertable table tr:nth-child(even),.innertable table td:nth-child(even) {
    background: rgba(0,0,0,0.05);
} 
.innertable table tr:nth-child(odd),
.innertable table td:nth-child(odd) {
    background: rgba(0,0,0,0.15);
} 
.innertable table td.memo {
    text-align: left;
}
.transactions-table tr td input[type='text']{
    size: 50px;
}
.ddWidth {
    max-width: 130px;
    min-width: 130px;
    width: 130px ;
}